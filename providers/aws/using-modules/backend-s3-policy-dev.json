{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "ListObjectsInBucket",
          "Effect": "Allow",
          "Principal": "*",
          "Action": ["s3:ListBucket"],
          "Resource": ["arn:aws:s3:::rd-tutorial-terraform"]
      },
      {
          "Sid": "PublicReadGetObject",
          "Effect": "Allow",
          "Principal": "*",
          "Action": [
            "s3:*Object"
          ],
          "Resource": "arn:aws:s3:::rd-tutorial-terraform/*"
      }
  ]
}